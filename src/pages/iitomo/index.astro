---
import { MyApp } from "@/components/MyApp";
import Layout from "@/layouts/Layout.astro";
---

<Layout>
  <main class="wrapper">
    <MyApp client:load />
  </main>
</Layout>

<style lang="scss">
  .wrapper {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .title {
    font-weight: bold;
    font-size: 2rem;
  }

  .linkBack {
    text-decoration: underline;
  }
</style>
